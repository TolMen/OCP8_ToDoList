{% extends 'base.html.twig' %}

{% block title %}Liste utilisateur - To Do List {% endblock %}

{% block body %}
    <div class="container">
        {% if users|length == 0 %}
            <div class="alert alert-warning text-center" role="alert">
                <i class="fas fa-exclamation-triangle"></i> Il n'y a pas encore d'utilisateur enregistré. 
                <a href="{{ path('user_create') }}" class="btn btn-warning mt-3"><i class="fas fa-user-plus"></i> Créer un utilisateur</a>
            </div>
        {% else %}
            <div class="row text-center" style="margin-top: 25px; margin-bottom: 25px;">
                <h1 class="font-weight-bold mb-4">Liste des utilisateurs</h1>
                <div class="col-md-12">
                    <table class="table table-striped table-hover" style="width: 100%;">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Nom d'utilisateur</th>
                                <th>Adresse e-mail</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <th scope="row">{{ loop.index }}</th>
                                    <td>{{ user.username }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        <a href="{{ path('user_edit', {'id' : user.id}) }}" class="btn btn-success btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{#{{ path('user_delete', {'id' : user.id}) }}#}" class="btn btn-danger btn-sm">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
